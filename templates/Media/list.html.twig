{% extends 'layout.html.twig' %}

{% block main %}
    <h1>Dernier media <a href="{{ path('media_add') }}" class="oi add-media" data-glyph="plus" title="Add media"></a></h1>
    <div class="media-list">
        {% for media in medias %}
            <div>
                {{ media.name }}
                <a href="{{ path('media_update', {'id' : media.id }) }}" class="oi oi-delete update-media" data-glyph="pencil" title="Update media" data-id="{{ media.id }}" >Modifier</a>
                <button class="oi oi-delete delete-media delete-modal" data-glyph="circle-x" title="Delete media" data-id="{{ media.id }}" >Supprimer</button>
            </div>
        {% endfor %}
    </div>

    <button><a href="{{ path('media_add') }}">Ajouter</a></button>

{% endblock %}
